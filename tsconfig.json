{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "Editor/*": ["src/Editor/*"],
      "resources/*": ["src/resources/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "build", "public"]
}

